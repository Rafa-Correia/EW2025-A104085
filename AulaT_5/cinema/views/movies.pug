extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h1= tit
        w3.container 
            table.w3-table-all 
                tr 
                    th Year 
                    th Title 
                    th Cast 
                    th Genre 
                each f in movieList
                    tr 
                        td= f.year
                        td= f.title
                        td 
                            ul.w3-ul 
                                each actor in f.cast 
                                    li= actor 
                        td 
                            ul.w3-ul 
                                each genre in f.genres 
                                    li= genre
    footer.w3-container.w3-blue 
        address Generated by ENGWEB2025