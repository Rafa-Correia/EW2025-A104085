extends layout 

block content 
    block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 
                span Lista de Contratos 
        
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Objeto
                    th Data Celebracao
                    th Preco Contratual
                    th NIPC de E.C.
                    th Entidade Comunicante
                each contrato in slist 
                    tr 
                        td.truncate(title=contrato._id)
                            a(href='/' + contrato._id)= contrato._id
                        td.truncate(title=contrato.objectoContrato)= contrato.objectoContrato
                        td.truncate(title=contrato.dataCelebracaoContrato)= contrato.dataCelebracaoContrato
                        td.truncate(title=contrato.precoContratual)= contrato.precoContratual
                        td.truncate(title=contrato.NIPC_entidade_comunicante)= contrato.NIPC_entidade_comunicante
                        td.truncate(title=contrato.entidade_comunicante)= contrato.entidade_comunicante
